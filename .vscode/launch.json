{
    // IntelliSense를 사용하여 가능한 특성에 대해 알아보세요.
    // 기존 특성에 대한 설명을 보려면 가리킵니다.
    // 자세한 내용을 보려면 https://go.microsoft.com/fwlink/?linkid=830387을(를) 방문하세요.
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docusaurus Start (Debug)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}", // Adjust if your Docusaurus site is in a subfolder (e.g., "website")
            "program": "${workspaceFolder}/node_modules/@docusaurus/core/bin/docusaurus.mjs",
            "args": [
                "start"
            ],
            "runtimeArgs": [
                "--inspect-brk"
            ], // Enable Node.js inspector for debugging
            "console": "integratedTerminal"
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "localhost에 대해 Edge 시작",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}